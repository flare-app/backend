<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.mariadb.jdbc.Driver
        </property>
        <property name="hibernate.connection.pool_size">
            16
        </property>
        <property name="hibernate.jdbc.batch_size">
            50
        </property>

        <!-- migration settings -->

        <mapping class="de.flare.storage.model.gps.SimpleGPSLocations"/>
        <mapping class="de.flare.storage.model.unit.SimpleUnit"/>
        <mapping class="de.flare.storage.model.unit.SimpleUnitLocation"/>
        <mapping class="de.flare.storage.model.user.SimpleUnitAuthorization"/>
        <mapping class="de.flare.storage.model.user.SimpleUser"/>

    </session-factory>
</hibernate-configuration>